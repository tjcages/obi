+// ───────────────────────────────────────────────────────────────────────────────
+// PATCH /keys/:clientId — add redirect URIs to existing key (requires X-Client-Secret)
+// ───────────────────────────────────────────────────────────────────────────────
+const PatchKeyBody = Schema.Struct({
+  redirect_uris: Schema.Array(Schema.String),
+});
+
+apiRoutes.patch('/keys/:clientId', async (c) => {
+  const clientId = c.req.param('clientId');
+  const clientSecret = c.req.header('X-Client-Secret');
+
+  if (!clientSecret) {
+    return c.json(
+      {
+        error: {
+          code: 'VALIDATION_ERROR',
+          message: 'Missing X-Client-Secret header',
+          action:
+            'Include your client_secret in the X-Client-Secret request header',
+          docs: 'https://inbox.dog/docs/errors#INVALID_CREDENTIALS',
+        },
+      },
+      401,
+    );
+  }
+
+  const raw = await c.req.json().catch(() => ({}));
+
+  const program = Effect.gen(function* () {
+    const body = yield* Schema.decodeUnknown(PatchKeyBody)(raw).pipe(
+      Effect.mapError(
+        () =>
+          new ValidationError({
+            field: 'body',
+            message: 'Invalid request body. Provide redirect_uris array.',
+          }),
+      ),
+    );
+
+    yield* validateRedirectUris(body.redirect_uris);
+
+    const kv = yield* KVService;
+    const apiKey = yield* authenticateApiKey(clientId, clientSecret);
+
+    const existing = apiKey.redirectUris ?? [];
+    const merged = [...new Set([...existing, ...body.redirect_uris])];
+    const updated = { ...apiKey, redirectUris: merged };
+
+    yield* kv.putApiKey(clientId, updated);
+
+    return {
+      client_id: clientId,
+      redirect_uris: merged,
+    };
+  });
+
+  const result = await runEffectEither(program, c.env);
+  if (result.ok) {
+    return c.json(result.value);
+  }
+  const { status, body: errBody } = errorToResponse(result.error);
+  return c.json(errBody, status as any);
+});
